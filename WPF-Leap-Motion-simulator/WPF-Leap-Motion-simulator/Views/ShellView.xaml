                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            FontWeight="Bold"
                         />
                    </Grid>
                    <Grid
                        Canvas.Left="{Binding Path=ActualKeyboard.PropKey7.PositionX, Mode=OneWay}"  
                        Canvas.Top="{Binding Path=ActualKeyboard.PropKey7.PositionY, Mode=OneWay}"
                    >
                        <Rectangle
                            Width="{Binding Path=ActualKeyboard.PropKey7.Width, Mode=OneWay}"
                            Height="{Binding Path=ActualKeyboard.PropKey7.Height, Mode=OneWay}"
                            Fill="White"
                            Opacity="0.7"
                            Stroke="Black"
                            StrokeThickness="1.5"
                        />
                        <TextBlock
                            Text="{Binding Path=ActualKeyboard.PropKey7.Value, Mode=OneWay}"
                            VerticalAlignment="Center"
