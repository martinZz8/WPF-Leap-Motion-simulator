                         />
                    </Grid>
                    <Grid
                        Canvas.Left="{Binding Path=ActualKeyboard.PropKey0.PositionX, Mode=OneWay}"  
                        Canvas.Top="{Binding Path=ActualKeyboard.PropKey0.PositionY, Mode=OneWay}"
                    >
                        <Rectangle
                            Width="{Binding Path=ActualKeyboard.PropKey0.Width, Mode=OneWay}"
                            Height="{Binding Path=ActualKeyboard.PropKey0.Height, Mode=OneWay}"
                            Fill="White"
                            Opacity="0.7"
