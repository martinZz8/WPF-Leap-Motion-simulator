                            FontWeight="Bold"
                         />
                    </Grid>
                    <Grid
                        Canvas.Left="{Binding Path=ActualKeyboard.PropKey9.PositionX, Mode=OneWay}"  
                        Canvas.Top="{Binding Path=ActualKeyboard.PropKey9.PositionY, Mode=OneWay}"
                    >
                        <Rectangle
                            Width="{Binding Path=ActualKeyboard.PropKey9.Width, Mode=OneWay}"
                            Height="{Binding Path=ActualKeyboard.PropKey9.Height, Mode=OneWay}"
                            Fill="White"
                            Opacity="0.7"
