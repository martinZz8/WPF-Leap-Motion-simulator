                            StrokeThickness="1.5"
                        />
                        <TextBlock
                            Text="{Binding Path=ActualKeyboard.PropKey0.Value, Mode=OneWay}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            FontWeight="Bold"
                         />
                    </Grid>
                </Canvas>
            </Canvas>
        </Grid>

        <!-- Row 3 -->
        <Grid Grid.Row="3" Grid.Column="1">
            <TextBlock
                Text="{Binding Path=ProgramVersion, Mode=OneTime}"
                Grid.Row="3"
                Grid.Column="3"
                HorizontalAlignment="Right"
                FontSize="10"
                FontWeight="Normal"
            />
        </Grid>
    </Grid>
</Window>
