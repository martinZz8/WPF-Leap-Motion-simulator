                            FontWeight="Bold"
                         />
                    </Grid>
                    <Grid
                        Canvas.Left="{Binding Path=ActualKeyboard.PropKey8.PositionX, Mode=OneWay}"  
                        Canvas.Top="{Binding Path=ActualKeyboard.PropKey8.PositionY, Mode=OneWay}"
                    >
                        <Rectangle
                            Width="{Binding Path=ActualKeyboard.PropKey8.Width, Mode=OneWay}"
                            Height="{Binding Path=ActualKeyboard.PropKey8.Height, Mode=OneWay}"
                            Fill="White"
                            Opacity="0.7"
                            Stroke="Black"
                            StrokeThickness="1.5"
                        />
                        <TextBlock
                            Text="{Binding Path=ActualKeyboard.PropKey8.Value, Mode=OneWay}"
