<Window x:Class="WPF_Leap_Motion_simulator.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Leap_Motion_simulator.Views"
        xmlns:cal="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro.Platform"
        mc:Ignorable="d"
        Title="Leap Motion Simulator"
        Width="{Binding Path=WindowWidth, Mode=TwoWay}"
        Height="{Binding Path=WindowHeight, Mode=TwoWay}"
        MinWidth="1280px"
        MinHeight="720px"
        WindowStartupLocation="CenterScreen"
        Background="#f1b938"
        >
    <Grid>
        <!--OLD VERSION-->
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="10px"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10px"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="10px"/>
            <RowDefinition Height="19px"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="13px"/>
            <RowDefinition Height="10px"/>
        </Grid.RowDefinitions>-->

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding Path=WindowBorderSize, Mode=OneWay}"/> <!--10px-->
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="{Binding Path=WindowBorderSize, Mode=OneWay}"/> <!--10px-->
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding Path=WindowBorderSize, Mode=OneWay}"/> <!--10px-->
            <RowDefinition Height="{Binding Path=WindowHeaderSize, Mode=OneWay}"/> <!--19px | auto-->
            <RowDefinition Height="*"/>
            <RowDefinition Height="{Binding Path=WindowFooterSize, Mode=OneWay}"/> <!--13px | auto-->
            <RowDefinition Height="{Binding Path=WindowBorderSize, Mode=OneWay}"/> <!--10px-->
        </Grid.RowDefinitions>

        <!-- Elements on the top of the app -->
        <Canvas
            Panel.ZIndex="100"
        >
            <Ellipse
                Width="{Binding Path=ActualCursor.GetCursorSize, Mode=OneWay}"
                Height="{Binding Path=ActualCursor.GetCursorSize, Mode=OneWay}"
                Fill="Red"
                Opacity="0.9"
                Canvas.Left="{Binding Path=ActualCursor.PositionX, Mode=OneWay}"
                Canvas.Top="{Binding Path=ActualCursor.PositionY, Mode=OneWay}"
                Visibility="{Binding Path=ActualCursor.GetVisibilityType, Mode=OneWay}"
            >
                <Ellipse.Effect>
                    <BlurEffect Radius="3" KernelType="Gaussian"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Test with tap animation-->
            <Ellipse
                x:Name="testEllipse"
                Width="{Binding Path=ActualCursor.GetCursorTapSize, Mode=OneWay}"
                Height="{Binding Path=ActualCursor.GetCursorTapSize, Mode=OneWay}"
                Fill="White"
                Canvas.Left="{Binding Path=ActualCursor.TapPositionX, Mode=OneWay}"
                Canvas.Top="{Binding Path=ActualCursor.TapPositionY, Mode=OneWay}"
            >
                <Ellipse.Effect>
                    <BlurEffect Radius="7" KernelType="Gaussian"/>
                </Ellipse.Effect>

                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Ellipse.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetName="testEllipse" 
                                    Storyboard.TargetProperty="Opacity"
                                    From="0.7" To="0.0" Duration="0:0:1.3"
                                    AutoReverse="False"
                                />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>
        </Canvas>

        <!-- Row 1-->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Width="auto"
                Orientation="Horizontal"
                HorizontalAlignment="Left"
            >
                <TextBlock
                    Text="Tracking FPS:"
                    FontSize="14"
                    Padding="0 0 5 0"
                />
                <TextBlock
                    Text="{Binding Path=FPSCounter, Mode=OneWay}"
                    FontSize="14"
                />
            </StackPanel>

            <TextBlock
                Text="Paczkomat"
                Grid.Row="0"
                Grid.Column="1"
                FontSize="14"
                FontWeight="Bold"
                HorizontalAlignment="Center"
            />
        </Grid>

        <!-- Row 2 -->
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
            <Image
                Stretch="None"
                Source="../Assets/background1.jpg"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
            />
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ContentControl 
                Grid.Row="0"
                Grid.Column="0"
                x:Name="ActiveItem"
            />

            <!--Render numeric keyboard-->
            <Canvas
                Grid.Row="0"
                Grid.Column="0"
                Visibility="{Binding Path=ActualKeyboard.GetNumericKeyboardVisibilityType, Mode=OneWay}"
            >
                <Canvas
                    Canvas.Left="{Binding Path=ActualKeyboard.PositionX, Mode=OneWay}"
                    Canvas.Top="{Binding Path=ActualKeyboard.PositionY, Mode=OneWay}"
                    Width="{Binding Path=ActualKeyboard.Width, Mode=OneWay}"
                    Height="{Binding Path=ActualKeyboard.Height, Mode=OneWay}"
                    Background="Blue"
                >
                    <!--TEST-->
                    <Grid
                        Canvas.Left="0"
                        Canvas.Top="0"
                    >
                        <Rectangle
                            Width="25"
                            Height="25"
                            Fill="White"
                            Opacity="0.7"
                            Stroke="Black"
                            StrokeThickness="1.5"
                        />
                        <TextBlock
                            Text="55"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            FontWeight="Bold"
                         />
                    </Grid>

                    <Grid
                        Canvas.Left="{Binding Path=ActualKeyboard.PropKey1.PositionX, Mode=OneWay}"  
                        Canvas.Top="{Binding Path=ActualKeyboard.PropKey1.PositionY, Mode=OneWay}"
                    >
                        <Rectangle
                            Width="{Binding Path=ActualKeyboard.PropKey1.Width, Mode=OneWay}"
                            Height="{Binding Path=ActualKeyboard.PropKey1.Height, Mode=OneWay}"
                            Fill="White"
                            Opacity="0.7"
                            Stroke="Black"
                            StrokeThickness="1.5"
                         />
                        <TextBlock
                            Text="{Binding Path=ActualKeyboard.PropKey1.Value, Mode=OneWay}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            FontWeight="Bold"
                         />
                    </Grid>
                    <Grid
                        Canvas.Left="{Binding Path=ActualKeyboard.PropKey2.PositionX, Mode=OneWay}"  
                        Canvas.Top="{Binding Path=ActualKeyboard.PropKey2.PositionY, Mode=OneWay}"
                    >
                        <Rectangle
                            Width="{Binding Path=ActualKeyboard.PropKey2.Width, Mode=OneWay}"
                            Height="{Binding Path=ActualKeyboard.PropKey2.Height, Mode=OneWay}"
                            Fill="White"
                            Opacity="0.7"
                            Stroke="Black"
                            StrokeThickness="1.5"
                         />
                        <TextBlock
                            Text="{Binding Path=ActualKeyboard.PropKey2.Value, Mode=OneWay}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            FontWeight="Bold"
                         />
                    </Grid>
                    <Grid
                        Canvas.Left="{Binding Path=ActualKeyboard.PropKey3.PositionX, Mode=OneWay}"  
